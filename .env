# Nutrimama Environment Configuration

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nutrimama.log

# ML Models
MODELS_PATH=models/
DEFAULT_MODEL_VERSION=1.0

# Data
DATA_PATH=data/
USER_STATES_PATH=data/user_states/

# API (future)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_KEY=your_api_key_here

# LLM Integration (future)
# LLM_PROVIDER=openai  # or: huggingface, local
# OPENAI_API_KEY=your_key_here
# LLM_MODEL=gpt-3.5-turbo

# Safety & Moderation
ENABLE_SAFETY_CHECKS=true
ALERT_ON_CRITICAL_SYMPTOM=true

# Feature Flags
USE_DUMMY_PREDICTORS=true  # Set to false when real models are ready
ENABLE_MODEL_MONITORING=true
AUTO_RETRAIN_ENABLED=false
